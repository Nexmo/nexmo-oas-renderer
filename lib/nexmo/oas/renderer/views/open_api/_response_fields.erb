<div class="js-format Nxd-api__response" data-format="<%= format %>">
  <div class="Vlt-table Vlt-table--data Vlt-table--bordered">
    <table>
      <thead>
        <% if index %>
          <tr><th colspan="2"><%= schema['description'] || "Response #{index + 1}"%></th></tr>
        <% end %>
        <tr>
          <th>Field</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <%= erb :'open_api/_response_description_parameters', locals: { schema: schema } %>
      </tbody>
    </table>
  </div>
</div>
